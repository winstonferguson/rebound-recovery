<style>
  .product__badges {
    border-{{ border }}: 1px solid rgb(var(--color-base-accent-2));
    
    margin-{{ border }}: 30px;
    padding-{{ border }}: 30px;
  }

  .product__badges-wrapper {
    display: flex;
    justify-content: space-around;
    margin: 0 auto;
    max-width: 600px;
  }

  .product__badges-badge {
    display: flex;
    gap: 10px;
    flex-direction: column;
    font-size: 12px;
    line-height: 1.4;
    max-width: 120px;
    text-align: center;
  }

  .product__badges-badge img {
    border: none;
    margin: 0 auto;
  }
</style>

{%- if badges != blank -%}
  <div class="product__badges">
    <div class="product__badges-wrapper">
      {%- for badge in badges %}
        <div class="product__badges-badge">
          {{ badge | image_url: width: 80 | image_tag }}
          <span>{{ badge | map: "alt" | first }}</span>
        </div>
      {%- endfor %}
    </div>
  </div>
{%- endif -%} 